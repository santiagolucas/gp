

<h1>Funcionarios</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Data aniversario</th>
      <th>Criado por</th>
      <th>Atualizado por</th>
      <th>Sexo</th>
      <th>Endereco</th>
      <th>Email</th>
      <th>Bairro</th>
      <th>Municipio</th>
      <th>Data admissao</th>
      <th>Data desligamento</th>
      <th>Cep</th>
      <th>Telefone</th>
      <th>Celular</th>
      <th>Cpf</th>
      <th>Matricula</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @funcionarios.each do |funcionario| %>
      <tr>
        <td><%= funcionario.nome %></td>
        <td><%= funcionario.data_aniversario %></td>
        <td><%= funcionario.criado_por %></td>
        <td><%= funcionario.atualizado_por %></td>
        <td><%= funcionario.sexo %></td>
        <td><%= funcionario.endereco %></td>
        <td><%= funcionario.email %></td>
        <td><%= funcionario.bairro %></td>
        <td><%= funcionario.municipio_id %></td>
        <td><%= funcionario.data_admissao %></td>
        <td><%= funcionario.data_desligamento %></td>
        <td><%= funcionario.cep %></td>
        <td><%= funcionario.telefone %></td>
        <td><%= funcionario.celular %></td>
        <td><%= funcionario.cpf %></td>
        <td><%= funcionario.matricula %></td>
        <td><%= link_to 'Show', funcionario %></td>
        <td><%= link_to 'Edit', edit_funcionario_path(funcionario) %></td>
        <td><%= link_to 'Destroy', funcionario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

